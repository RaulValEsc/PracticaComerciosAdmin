<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".vistas.Comercio.VistaComercio">

    <ImageView
        android:id="@+id/ivComercio"
        android:layout_width="219dp"
        android:layout_height="219dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNombreComercio"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_marginTop="344dp"
        android:gravity="center"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="@+id/ivComercio"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/ivComercio"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_marginTop="436dp"
        android:gravity="center"
        android:text="Descripcion"
        app:layout_constraintEnd_toEndOf="@+id/ivComercio"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/ivComercio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bProductos"
        android:layout_width="273dp"
        android:layout_height="54dp"
        android:layout_marginTop="520dp"
        android:background="@color/colorPrimary"
        android:text="Productos"
        app:layout_constraintEnd_toEndOf="@+id/ivComercio"
        app:layout_constraintStart_toStartOf="@+id/ivComercio"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbComercio"
        android:layout_width="411dp"
        android:layout_height="61dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>